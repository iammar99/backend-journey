<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Mini project 1</title>
    <link rel="shortcut icon" href="/Images/favico.ico" type="image/x-icon">
    <!-- Bootstarp -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/StyleSheets/style.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid ">
                                <a class="navbar-brand" href="#"><img style="width: 60px; height: 60px; border-radius: 50%;" src="/Images/logo2.png" alt=""></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link  text-light" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/post">Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/liked-posts">Liked Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                    </ul>
                    <% if(!token){ %>
                        <button class="btn btn-outline-success" onclick="window.location.href='/login'">
                            Login
                        </button>
                        <% }else{ %>
                            <button class="btn btn-outline-danger" onclick="window.location.href='/logout'">
                                Logout
                            </button>
                            <% } %>
                </div>
            </div>
        </nav>
    </header>


    <main>
        <h1 class="text-light mt-4  text-center">Your Posts</h1>
        <div class="container-fluid">
            <div class="row">
                <% if(posts.length > 0){ %>
                    <% posts.reverse().forEach((post)=>{ %>
                        <div class="col-12 col-sm-6 col-lg-4  my-3">
                            <div class="card">
                                <h2 class="text-light mx-3 ">
                                    <%= username %>
                                </h2>
                                <p class="mx-3 my-0 text-light">
                                    <%= post.postText %>
                                </p>
                                <div class="controlls d-flex justify-content-end align-items-center">
                                    <a class="mx-2 delete" href="/delete/<%=post._id%>">Delete</a>
                                    <a class="mx-2 edit" href="/edit/<%=post._id%>">Edit</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <%}else{%>
                    <h2 class="text-light text-center">
                        No Post Created
                    </h2>
                <% } %>
            </div>
        </div>
    </main>


    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <p class="my-3 text-center text-light">
                        &copy; <span id="year"></span> | All rights reserved
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Custom JS -->
    <script src="/Scripts/script.js"></script>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
</body>

</html>