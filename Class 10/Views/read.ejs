<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Stylesheet/style.css">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>My App</title>
</head>

<body>
    <header>
        <nav class="navbar bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-light" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/read">Read Users</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <% if (Users.length===0) { %>
                    <div class="alert alert-warning my-5" role="alert">
                        No users found.
                    </div>
                    <% } else { %>
                        <% Users.forEach((val)=> {
                            const modalId = `modal-${encodeURIComponent(val.username)}`;
                            const labelId = `label-${encodeURIComponent(val.username)}`;
                            %>
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="card my-5 px-3 py-3" style="width: 85%; cursor: pointer;">
                                    <div class=" d-flex justify-content-end">
                                        <span onclick="window.location.href='/edit/<%= val._id || encodeURIComponent(val.username) %>'">&#9998;</span>
                                        <span class="cross" data-bs-toggle="modal"
                                            data-bs-target="#<%= modalId %>">&#10060;</span>
                                    </div>
                                    <div class="box bg-secondary">
                                        <img src="<%= val.imageUrl %>" alt="<%= val.username %>"
                                            onerror="this.onerror=null;this.src='https://tse1.mm.bing.net/th/id/OIP.GHGGLYe7gDfZUzF_tElxiQHaHa?rs=1&pid=ImgDetMain&o=7&rm=3';">

                                    </div>
                                    <h1 class="text-center my-4">
                                        <%= val.username %>
                                            <span class="age">
                                                (<%= val.age %>)
                                            </span>
                                    </h1>
                                    <b>
                                        <%= val.email %>
                                    </b>
                                </div>
                            </div>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="<%= modalId %>" tabindex="-1" aria-labelledby="<%= labelId %>"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="<%= labelId %>">Delete <%= val.username %>?
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <strong>
                                                <%= val.username %>
                                            </strong>?
                                            <p class="text-danger fw-bold">This action cannot be undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <a href="/delete/<%= val._id || encodeURIComponent(val.username) %>">
                                                <button type="button" class="btn btn-danger">Delete</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } %>
            </div>

        </div>
    </main>
    <footer class="bg-primary">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="my-4 text-center text-light" id="footer-text">
                        &copy; <span id="year"></span> My App. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
    <!-- Custom JS -->
    <script src="/Javascript/script.js"></script>
</body>

</html>